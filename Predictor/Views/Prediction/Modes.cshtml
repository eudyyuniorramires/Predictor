@model Predictor.ViewModels.PredictionModeViewModel

<h2>Seleccionar Modo de Predicción</h2>

<form asp-action="SetMode" method="post">
    <div class="form-group">
        <label asp-for="SelectedMode">Modo de predicción:</label>
        <select asp-for="SelectedMode" asp-items="@(new SelectList(Model.AvailableModes))"
                class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Configuración</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</form>