@model AssetInputViewModel

<div class="container">
    <form asp-action="Calculate" method="post">
        <div class="form-group">
            <label>Ingrese 20 valores históricos:</label>
            <textarea asp-for="RawData" class="form-control" rows="10"
                      placeholder="Ejemplo:&#10;2025-05-01, 150.35&#10;2025-05-02, 152.10"></textarea>
            <span asp-validation-for="RawData" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Calcular Predicción</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Opcional: Validación en cliente mejorada
        $(document).ready(function () {
            $("form").on("submit", function () {
                var lines = $("#RawData").val().split('\n');
                if (lines.length !== 20) {
                    alert("Debe ingresar exactamente 20 líneas de datos");
                    return false;
                }
            });
        });
    </script>
}